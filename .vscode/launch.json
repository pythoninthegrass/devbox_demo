{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // pytest: https://stackoverflow.com/questions/70259564/how-to-debug-the-current-python-test-file-with-pytest-in-vs-code
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
            // "args": ["-i", "response.xml", "-o", "response.csv"],
            // "args": ["-d", "/Volumes/Data"],
            // "args": ["-f", "menubar.dmg"],
            // "args": ["-h"],
        },
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/flask",
            "console": "integratedTerminal",
            "args": [
                "--app",
                "${workspaceFolder}/app/main.py",
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5000"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal"
        }
    ]
}
