{
  "packages": {
    "python":                "3.11.9",
    "python311Packages.pip": "latest",
    "asdf-vm":               "latest",
    "gh":                    "latest",
    "git":                   "latest",
    "gnumake":               "latest",
    "go-task":               "latest",
    "nodejs":                "21.4.0",
    "openssl":               "latest",
    "poetry":                "latest",
    "tilt":                  "latest",
    "uv":                    "latest"
  },
  "env": {
    "VENV_DIR": ".venv"
  },
  "shell": {
    "init_hook": [
      "./bootstrap.sh --init",
      ". $VENV_DIR/bin/activate"
    ],
    "scripts": {
      "export": "poetry export -f requirements.txt --output requirements.txt --without-hashes",
      "test": "poetry run pytest"
    }
  }
}
